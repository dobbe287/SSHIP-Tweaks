<?xml version="1.0" encoding="UTF-8"?>
<project name="module_tm.common" default="compile.module.tm.common">
  <dirname property="module.tm.common.basedir" file="${ant.file.module_tm.common}"/>
  
  <property name="module.jdk.home.tm.common" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.tm.common" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.tm.common" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.tm.common" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="tm.common.output.dir" value="${module.tm.common.basedir}/../out/production/tm.common"/>
  <property name="tm.common.testoutput.dir" value="${module.tm.common.basedir}/../out/test/tm.common"/>
  
  <path id="tm.common.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="tm.common.module.production.classpath">
    <path refid="${module.jdk.classpath.tm.common}"/>
    <path refid="library.org.projectlombok:lombok:1.16.16.classpath"/>
    <path refid="library.org.assertj:assertj-core:3.6.2.classpath"/>
  </path>
  
  <path id="tm.common.runtime.production.module.classpath">
    <pathelement location="${tm.common.output.dir}"/>
    <path refid="library.org.projectlombok:lombok:1.16.16.classpath"/>
    <path refid="library.org.assertj:assertj-core:3.6.2.classpath"/>
  </path>
  
  <path id="tm.common.module.classpath">
    <path refid="${module.jdk.classpath.tm.common}"/>
    <pathelement location="${tm.common.output.dir}"/>
    <path refid="library.org.projectlombok:lombok:1.16.16.classpath"/>
    <path refid="library.org.assertj:assertj-core:3.6.2.classpath"/>
    <path refid="library.junit:junit:4.12.classpath"/>
  </path>
  
  <path id="tm.common.runtime.module.classpath">
    <pathelement location="${tm.common.testoutput.dir}"/>
    <pathelement location="${tm.common.output.dir}"/>
    <path refid="library.org.projectlombok:lombok:1.16.16.classpath"/>
    <path refid="library.org.assertj:assertj-core:3.6.2.classpath"/>
    <path refid="library.junit:junit:4.12.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.tm.common">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.tm.common">
    <patternset refid="excluded.from.module.tm.common"/>
  </patternset>
  
  <path id="tm.common.module.sourcepath">
    <dirset dir="${module.tm.common.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="tm.common.module.test.sourcepath">
    <dirset dir="${module.tm.common.basedir}">
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.tm.common" depends="compile.module.tm.common.production,compile.module.tm.common.tests" description="Compile module tm.common"/>
  
  <target name="compile.module.tm.common.production" depends="register.custom.compilers" description="Compile module tm.common; production classes">
    <mkdir dir="${tm.common.output.dir}"/>
    <javac2 destdir="${tm.common.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tm.common}/javac">
      <compilerarg line="${compiler.args.tm.common}"/>
      <bootclasspath refid="tm.common.module.bootclasspath"/>
      <classpath refid="tm.common.module.production.classpath"/>
      <src refid="tm.common.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.tm.common"/>
    </javac2>
    
    <copy todir="${tm.common.output.dir}">
      <fileset dir="${module.tm.common.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.tm.common.tests" depends="register.custom.compilers,compile.module.tm.common.production" description="compile module tm.common; test classes" unless="skip.tests">
    <mkdir dir="${tm.common.testoutput.dir}"/>
    <javac2 destdir="${tm.common.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tm.common}/javac">
      <compilerarg line="${compiler.args.tm.common}"/>
      <bootclasspath refid="tm.common.module.bootclasspath"/>
      <classpath refid="tm.common.module.classpath"/>
      <src refid="tm.common.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.tm.common"/>
    </javac2>
    
    <copy todir="${tm.common.testoutput.dir}">
      <fileset dir="${module.tm.common.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.tm.common" description="cleanup module">
    <delete dir="${tm.common.output.dir}"/>
    <delete dir="${tm.common.testoutput.dir}"/>
  </target>
</project>